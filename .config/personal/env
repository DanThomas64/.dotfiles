#!/usr/bin/env zsh

DOTFILES="$HOME/.dotfiles"

dotfiles () {
  git --git-dir="$DOTFILES" --work-tree="$HOME" "$@"
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}
